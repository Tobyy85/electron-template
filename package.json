{
    "name": "var_product_name",
    "private": true,
    "version": "0.0.0",
    "main": "dist-electron/main.js",
    "scripts": {
        "lint": "eslint .",
        "preview": "vite preview",
        "format": "prettier --write .",
        "dev": "concurrently \"npm:vite:dev\" \"npm:electron:watch\" \"npm:electron:start\"",
        "build": "npm run build:electron && vite build",
        "vite:dev": "vite",
        "electron:watch": "tsc -w -p electron/tsconfig.json",
        "electron:start": "wait-on tcp:3000 dist-electron/main.js && nodemon --watch dist-electron --ext js,mjs,cjs --delay 200ms --exec \"electron .\"",
        "build:electron": "tsc -p electron/tsconfig.json",
        "dist": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.VAR_APP_ID.VAR_PRODUCT_NAME",
        "productName": "VAR_PRODUCT_NAME",
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "release"
        }
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.14",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.9.3",
        "tailwindcss": "^4.1.14"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.1",
        "@vitejs/plugin-react": "^5.0.4",
        "concurrently": "^9.2.1",
        "electron": "^38.2.2",
        "electron-builder": "^26.0.12",
        "eslint": "^9.37.0",
        "eslint-plugin-react-hooks": "^6.1.1",
        "eslint-plugin-react-refresh": "^0.4.23",
        "globals": "^16.4.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.0",
        "vite": "^7.1.9",
        "wait-on": "^9.0.1"
    }
}
